{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@views/*": [
        "./src/views/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@routes/*": [
        "src/shared/infra/http/routes/*"
      ],
      "@repositories/*": [
        "./src/repositories/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@errors/*": [
        "src/shared/errors/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@database/*": [
        "src/shared/infra/database/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/modules/cars/infra/typeorm/database/app-data-source.ts"
  ]
}