  "paths":{
    "/categories":{
      "post":{
        "tags":["Category"],
        "sumary":"Create category",
        "description":"Create a new category",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "name":{
                    "type":"string"
                  },
                  "description":{
                    "type":"string"
                  }
                },
                "example":{
                  "name":"Category name example",
                  "description":"Category description example"
                }
              }
            }
          }
        },
        "responses":{
          "201":{
            "description":"Created"
          },
          "500":{
            "description":"Category already exists"
          }
        }
      },
      "get":{
        "tags":["Category"],
        "sumary":"List alll Categories",
        "description":"List all categories",
        "responses":{
          "200":{
            "description":"Success",
             "content":{
               "application/json":{
                 "type":"array",
                 "items":{
                   "type":"object",
                   "properties":{
                     "name":{
                       "type":"string"
                     },
                     "description":{
                       "type":"string"
                     }
                   }
                 }
               }
             }
          }
        }
      }
    }
  }
}
